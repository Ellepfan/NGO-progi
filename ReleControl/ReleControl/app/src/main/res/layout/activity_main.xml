                android:id="@+id/Rele2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:switchMinWidth="96dp"
                android:thumbTint="#6200EE"
                android:trackTint="#a8a8a8"/>
        </LinearLayout>

        <!-- Реле 3 -->
