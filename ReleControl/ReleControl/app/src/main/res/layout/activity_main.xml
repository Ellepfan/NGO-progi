<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#f5f5f5">

    <!-- Основной контейнер с реле -->
    <LinearLayout
        android:id="@+id/relays_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:elevation="4dp"
        android:padding="16dp">

        <!-- Переключатель "Все" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Все реле"
                android:textSize="18sp"
                android:textColor="#333333"
                android:textStyle="bold"/>

            <Switch
                android:id="@+id/switchAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:switchMinWidth="96dp"
                android:thumbTint="#6200EE"
                android:trackTint="#a8a8a8"/>
        </LinearLayout>

        <!-- Разделитель -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"
            android:layout_marginVertical="4dp"/>

        <!-- Реле 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/custom_name1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Имя 1"
                android:textSize="18sp"
                android:textColor="#333333"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Реле 1"
                android:textSize="16sp"
                android:textColor="#a8a8a8"
                android:layout_marginHorizontal="8dp"/>

            <Switch
                android:id="@+id/Rele1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:switchMinWidth="96dp"
                android:thumbTint="#6200EE"
                android:trackTint="#a8a8a8"/>
        </LinearLayout>        <!-- Реле 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

