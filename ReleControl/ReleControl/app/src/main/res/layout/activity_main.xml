                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Реле 5"
                android:textSize="16sp"
                android:textColor="#a8a8a8"
                android:layout_marginHorizontal="8dp"/>

            <Switch
                android:id="@+id/Rele5"
